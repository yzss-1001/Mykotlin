<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:background="@mipmap/bac">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/toobar"
        app:title=" ">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户登录"
            android:layout_marginLeft="120dp"
            android:textSize="28dp"
            />
        <TextView
            android:id="@+id/register"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:text="注册" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="50dp"
            android:background="@color/white"
            android:src="@mipmap/logo1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="0dp"
                android:src="@mipmap/logo2" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:autofillHints=""
                    android:background="@null"
                    android:hint="@string/account_ti"
                    android:inputType="text"
                    android:minHeight="40dp"
                    tools:ignore="TouchTargetSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:src="@mipmap/logo3"

                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"

                    android:autofillHints=""
                    android:background="@null"
                    android:hint="@string/password_ti"
                    android:inputType="textPassword"
                    android:minHeight="40dp"
                    tools:ignore="TouchTargetSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!--        <View-->
        <!--            android:layout_width="295dp"-->
        <!--            android:layout_height="1dp"-->
        <!--            android:background="#a4a3a3" />-->

        <Button
            android:id="@+id/denglu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录" />


        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="8dp"
            android:text="忘记密码？"
            android:textColor="#222" />

        <LinearLayout
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <View
                android:layout_width="190dp"
                android:layout_height="1dp"
                android:layout_marginTop="13dp"
                android:background="#a4a3a3"
                android:orientation="vertical" />

            <ImageView
                android:id="@+id/location1"
                android:layout_width="30dp"

                android:layout_height="25dp"
                android:layout_marginLeft="0dp"
                android:src="@mipmap/logo4" />

            <View
                android:layout_width="190dp"
                android:layout_height="1dp"
                android:layout_marginTop="13dp"
                android:background="#a4a3a3"
                android:orientation="vertical" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/handle"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="155dp"
                android:text="其它方式登录"
                android:textColor="#222" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sdrawer"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:content="@id/content"
            android:handle="@id/handle">

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="10dp"
                    android:src="@mipmap/logo5" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="10dp"
                    android:src="@mipmap/logo6" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="10dp"
                    android:src="@mipmap/logo7" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>